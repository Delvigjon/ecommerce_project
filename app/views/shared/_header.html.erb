<!-- Navbar -->
<nav class="navbar">
  <div class="container">
    <a href="/" class="logo">MonSite</a>
    <ul class="nav-links">
      <li><a href="#home">Accueil</a></li>
      <li><a href="#products">Produits</a></li>
      <li><a href="#contact">Contact</a></li>
      <li><a href="#about">À propos</a></li>
    </ul>
  </div>
</nav>

<!-- Banner -->
<div class="banner">
  <div class="banner-content">
    <h1>Bienvenue sur notre boutique en ligne</h1>
    <p>Découvrez nos produits d'exception !</p>
    <%= link_to 'Découvrir nos produits', products_path, class: 'btn-primary' %>
  </div>
</div>

<!-- Products Section -->
<div class="products-section">
  <h2>Nos produits populaires</h2>
  <div class="products-grid">
    <% @products.each do |product| %>
      <div class="product-card">
        <%= image_tag "products/#{product.image_url}", alt: product.name if product.image_url.present? %>
        <h3><%= product.name %></h3>
        <p><%= number_to_currency(product.price) %></p>
        <%= link_to 'Voir le produit', product_path(product), class: 'btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>

<!-- CTA Section -->
<div class="cta-section">
  <h2>Profitez de nos offres exclusives</h2>
  <%= link_to 'Voir toutes les offres', offers_path, class: 'btn-primary' %>
</div>
