<div class="products-grid">
  <% @products.each do |product| %>
    <div class="product-card">
      <!-- Utilisation de asset_path pour charger l'image via le pipeline des assets -->
      <%= image_tag asset_path("products/#{product.image_url}"), alt: product.name if product.image_url.present? %>
      <h3><%= link_to product.name, product_path(product) %></h3>
      <p><%= number_to_currency(product.price, unit: "â‚¬", format: "%n %u") %></p>
    </div>
  <% end %>
</div>
